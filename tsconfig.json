{
    "compilerOptions": {
        "declaration": true,
        //类型输出文件
        "outDir": "dist",
        "baseUrl": ".",
        "module": "esnext",
        "target": "es5",
        "lib": ["ES6", "DOM"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true
    },
    "include": [
        // 这一条加不加好像没区别？
        "lib/**/*",
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "*.js"
    ]
}